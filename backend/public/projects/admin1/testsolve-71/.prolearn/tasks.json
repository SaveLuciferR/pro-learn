{
  "setupTasks": [
    "pip install -r requirements.txt"
  ],
  "tasks": {
    "start": {
      "name": "start",
      "command": "python main.py",
      "runAtStart": true,
      "restartOn": {
        "files": ["main.py"]
      }
    },
    "install-dependencies": {
      "name": "Installing Dependencies",
      "command": "pip install -r requirements.txt",
      "restartOn": {
        "files": ["requirements.txt"]
      }
    }
  }
}